<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Order date</th>
      <th>Order Id</th>
      <th>Username</th>
      <th>User Email</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.id %></td>
        <td><%= order.user.username %></td>
        <td><%= order.user.email %></td>
        <td><%= order.status %></td>
        <td><a href="/shipped/<%= order.id %>" class="btn btn-secondary"><i class="fa fa-shipping-fast"></i></a></td>
        <td><a href="/orders/<%= order.id %>" class="btn btn-secondary"><i class="fa fa-eye"></i></a></td>
        <td><a href="/orders/<%= order.id %>/edit" class="btn btn-secondary"><i class="fa fa-edit"></i></a></td>

        <td><%= link_to 'Destroy', order, :class => "btn btn-secondary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

