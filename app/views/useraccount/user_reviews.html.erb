<div class="row justify-content-center">
    <%= render 'useraccount/useraccountnav'%> 
</div>


<div class="row justify-content-center">
<% if @reviews %>

<h1><%=current_user.username%>'s Orders</h1>
</div>
<div class="row justify-content-center">
<table>
  <thead>
    <tr>
      <th>Review date</th>
      <th>User</th>
      <th>Status</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.description %></td>
        <td><%= review.item.title %></td>
        <td><%= link_to 'Edit', edit_item_review_path(review.item, review) %></td>
        
       

      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
</div>