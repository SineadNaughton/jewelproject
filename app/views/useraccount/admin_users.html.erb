<% provide(:title, "Admin") %>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Id</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <% if user.adminrole == true %>
          <td>Admin</td>
        <% else %>
          <td>Customer</td>
        <% end%>
        
       
        <td><%#= link_to 'Show', user %></td>
        <td><%#= link_to 'Edit', edit_user_path(user) %></td>
        <td><%#s= link_to 'Destroy', user_registration_(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if user.adminrole == true %>
        <td><a href="/downgradeadmin/<%= user.id %>" class="btn btn-secondary" data-confirm='Are you sure?'>Remove Admin</a></td>
        <% else %>
        <td><a href="/upgradeadmin/<%= user.id %>" class="btn btn-secondary" data-confirm='Are you sure?'>Make Admin</a></td>
        <% end %>
        <td><a href="/removeuser/<%= user.id %>" class="btn btn-secondary" data-method="delete" data-confirm='Are you sure?'>Delete User</a></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


