<% provide(:title, "Account Orders") %>

<div class="row justify-content-center">
    <%= render 'useraccount/useraccountnav'%> 
</div>


<div class="row justify-content-center">
<% if @orders %>

<h1><%=current_user.username%>'s Orders</h1>
</div>
<div class="row justify-content-center">
<table>
  <thead>
    <tr>
      <th>Order date</th>
      <th>Status</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.status %></td>
        <td><%= order.order_total %></td>
        <td><a href="/useraccount/userorders/<%=order.id%>">See Order</a></td>
       

      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
</div>