<% provide(:title, "Admin") %>

<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table class="table">
  <thead>
    <tr>
      <th>Item</th>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.item %></td>
        <td><%= review.user %></td>
        <td><%= review.title %></td>
        <td><%= review.description %></td>
        <td><%= review.rating %></td>
        <td><a href="/items/<%=review.item.id%>/reviews/<%=review.id%>" data-method="delete" data-confirm='Are you sure?'>Delete</a>
        <%#= link_to 'Destroy', item_review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Review', new_review_path %>