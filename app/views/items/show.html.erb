<p id="notice"><%= notice %></p>

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
      <%= image_tag @item.image.url, :class => "item_image" %>
    </div>
    <div class="col-sm-6">
      <h1><%= @item.title %></h1>
      <p><strong>Description: </strong><%= @item.description %></p>

      <p>
        <strong>Price:</strong>
        <%= @item.price %>
      </p>

      <p>
        <strong>Collection:</strong>
        <%= @item.collection %>
      </p>

      <%= link_to 'Edit', edit_item_path(@item), :class => "btn btn-secondary" %> 
      <%= link_to 'Back', items_path, :class => "btn btn-secondary" %>
    </div>
  </div>
</div>  
  





   
   
