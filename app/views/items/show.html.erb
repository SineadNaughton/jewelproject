

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
      <%= image_tag @item.image.url, :class => "item_image" %>
    </div>
    <div class="col-sm-6">
      <h1><%= @item.title %></h1>
      <p><strong>Description: </strong><%= @item.description %></p>

      <p>
        <strong>Price:</strong>
        <%= @item.price %>
      </p>

      <p>
        <strong>Collection:</strong>
        <%= @item.collection %>
      </p>
           <p>
      <strong>Collection:</strong>
        <%= @item.material %>
      </p>
      
        <%= form_tag("/cart/addbyquantity/#{@item.id}", :method => "get") do %>
        <%= label_tag(:qty, "Qty: ") %>
        <%= text_field_tag(:qty, 1) %>
        <%= submit_tag("Add to Cart") %>
        <% end %>
      
        
      
      
      <% if current_user.try(:adminrole?) %>
      <%= link_to 'Edit', edit_item_path(@item), :class => "btn btn-secondary" %> 
      <% end %>
      <%= link_to 'Back', items_path, :class => "btn btn-secondary" %>
      <h2>Average Rating<%= @average_review %> (<%= @item.reviews.count %> reviews)</h2>
      
    
      <%= render @item.reviews %>
    </div>
  </div>
</div>  
  





   
   
