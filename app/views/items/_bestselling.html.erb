<div class="container-fluid"><!-- container to hold all products-->
<% if @bestsellingitems == nil %>
<% else %>
<h5 class="text-center">Bestselling Products</h5>
    <div class="row">
        <div class="col-sm-1"></div>
         <% @bestsellingitems.limit(5).order(quantity_sold: :desc).each do |item| %>
         <div class="col-sm-2">
            <div class="card">
                <img src="<%= item.image.url (:medium) %>" class="card-img-top jw-img-bestselling" />
              <div class="card-body">
                <a href="/items/<%= item.id %>" class="btn btn-block btn-secondary"><%= number_to_currency(item.price, :unit => "â‚¬") %></a>
              </div>
            </div>
        </div>
      <% end %> 
    </div>
<%end%>
</div>
  



